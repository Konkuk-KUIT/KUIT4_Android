<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".myeats.MyPageDetailFragment">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_my_page"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/black"
        app:tabRippleColor="@color/black"
        app:tabTextColor="#D7D2D2"
        android:background="@color/white"
        />
    
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_my_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf= "@id/tl_my_page"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fcv_my_page_review_rectangle"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp"
        android:background="#D7D2D2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>