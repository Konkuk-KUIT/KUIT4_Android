<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_my_eats_detail"
        android:layout_width="0dp"
        android:layout_height="149dp"
        android:src="@drawable/img_tteokbokki_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_my_eats_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/name"
        android:textFontWeight="600"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_my_eats_detail" />

    <ImageView
        android:id="@+id/iv_my_eats_star"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="@id/tv_my_eats_detail_name"
        app:layout_constraintTop_toBottomOf="@id/tv_my_eats_detail_name" />

    <TextView
        android:id="@+id/tv_my_eats_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:text="4.9 (3,849)"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_my_eats_star"
        app:layout_constraintTop_toBottomOf="@id/tv_my_eats_detail_name" />

</androidx.constraintlayout.widget.ConstraintLayout>