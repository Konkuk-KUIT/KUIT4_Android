<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_scroll_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_scroll_number"
        android:layout_width="44dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="7dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_scroll_image"
        app:layout_constraintEnd_toEndOf="@id/iv_scroll_image"
        app:shapeAppearanceOverlay="@style/circle" />

    <TextView
        android:id="@+id/tv_scroll_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/siv_scroll_number"
        app:layout_constraintEnd_toEndOf="@id/siv_scroll_number"
        app:layout_constraintStart_toStartOf="@id/siv_scroll_number"
        app:layout_constraintTop_toTopOf="@id/siv_scroll_number" />

</androidx.constraintlayout.widget.ConstraintLayout>