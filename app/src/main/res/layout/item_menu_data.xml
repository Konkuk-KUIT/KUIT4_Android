<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="51dp">

        <ImageView
            android:id="@+id/iv_recent"
            android:layout_width="230dp"
            android:layout_height="129dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/iv_recent"
            app:layout_constraintTop_toBottomOf="@id/iv_recent" />

        <TextView
            android:id="@+id/tv_recent_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="5dp"
            android:textFontWeight="400"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/tv_recent_name"
            app:layout_constraintTop_toBottomOf="@id/iv_recent" />

        <ImageView
            android:id="@+id/iv_recent_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="@id/iv_recent"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_name" />

        <TextView
            android:id="@+id/tv_recent_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_recent_star"
            app:layout_constraintTop_toTopOf="@id/iv_recent_star" />


</androidx.constraintlayout.widget.ConstraintLayout>