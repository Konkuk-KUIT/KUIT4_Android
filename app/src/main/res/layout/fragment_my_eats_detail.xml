<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myeats.MyEatsDetailFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_my_eats_review"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D7D2D2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/rectangle" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_my_eats_detail"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siv_my_eats_review"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="#595353" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_my_eats_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_my_eats_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>