<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_favorite_1">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_favorite_food"
        android:layout_width="306dp"
        android:layout_height="129dp"
        android:src="@drawable/image1"
        app:layout_constraintStart_toStartOf="@id/layout_favorite_1"
        app:layout_constraintTop_toTopOf="@id/layout_favorite_1"
        android:layout_marginHorizontal="27dp"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/corner_size_8"
        />
    <TextView
        android:id="@+id/tv_favorite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_favorite_food"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/iv_favorite_food"
        android:text="아워 떡볶이"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/iv_favorite_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_home_star"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_name"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_favorite_food"/>

    <TextView
        android:id="@+id/tv_favorite_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_name"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_favorite_star"
        android:layout_marginStart="5dp"
        android:text="4.9"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_favorite_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_name"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_favorite_rate"
        android:layout_marginStart="5dp"
        android:text="(3,849)"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_favorite_minuite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_favorite_food"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/iv_favorite_food"
        android:layout_marginEnd="1dp"
        android:text="30분"
        android:textSize="12dp"
        android:textColor="@color/black"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frame_favorite_1"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_minuite"
        app:layout_constraintEnd_toEndOf="@id/tv_favorite_minuite"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/iv_favorite_noheart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_favorite_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/like__filled_"
            android:visibility="gone" />



    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>