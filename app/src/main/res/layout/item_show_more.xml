<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_home_see_detail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_round_white"
        android:src="@drawable/ic_home_dropdown"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/tv_see_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_more"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/btn_home_see_detail"
        app:layout_constraintStart_toStartOf="@id/btn_home_see_detail"
        app:layout_constraintTop_toBottomOf="@id/btn_home_see_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>