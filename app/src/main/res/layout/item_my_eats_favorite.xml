<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_myeats_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_myeats_favorite"
            android:layout_width="360dp"
            android:layout_height="149dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_home_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_myeats_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="아워떡볶이"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_myeats_favorite" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myeats_favorite">

            <ImageView
                android:id="@+id/iv_myeats_favorite_star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/img_home_star" />

            <TextView
                android:id="@+id/tv_myeats_favorite_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="5.0"
                android:textColor="@color/gray5"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/iv_myeats_favorite_star"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_myeats_favorite" />

            <TextView
                android:id="@+id/tv_myeats_favorite_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(4,444)"
                android:textColor="@color/gray5"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/tv_myeats_favorite_score"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_myeats_favorite" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>