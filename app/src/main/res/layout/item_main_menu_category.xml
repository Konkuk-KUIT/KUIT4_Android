<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_favorite_data_item"
        android:layout_width="47dp"
        android:layout_height="47dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돈까스"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/iv_favorite_data_item"
        app:layout_constraintStart_toStartOf="@id/iv_favorite_data_item"
        app:layout_constraintTop_toBottomOf="@id/iv_favorite_data_item" />


</androidx.constraintlayout.widget.ConstraintLayout>