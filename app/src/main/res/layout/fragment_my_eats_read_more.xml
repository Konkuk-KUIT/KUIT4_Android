<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_eats_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_eats_fragment_look"
        android:layout_width="306dp"
        android:layout_height="42dp"
        android:src="@drawable/bule_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_eats_fragment_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자세히 보기"
        android:textColor="#02AFFE"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_eats_fragment_look"
        app:layout_constraintEnd_toEndOf="@id/iv_eats_fragment_look"
        app:layout_constraintStart_toStartOf="@id/iv_eats_fragment_look"
        app:layout_constraintTop_toTopOf="@id/iv_eats_fragment_look" />

    <LinearLayout
        android:id="@+id/LL_eats_fragment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/iv_eats_fragment_look"
        app:layout_constraintTop_toBottomOf="@id/tv_eats_fragment_look">

        <ImageView
            android:id="@+id/iv_eats_fragment_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_black_like" />

        <TextView
            android:id="@+id/tv_eats_fragment_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="즐겨찾기"
            android:textColor="@color/black"
            android:textSize="21sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>