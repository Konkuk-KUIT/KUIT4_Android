<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_more_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circle"
        app:strokeColor="#E8E9EB"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/iv_more_accordion"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_home_accordion"
        app:layout_constraintBottom_toBottomOf="@id/siv_more_circle"
        app:layout_constraintEnd_toEndOf="@id/siv_more_circle"
        app:layout_constraintStart_toStartOf="@id/siv_more_circle"
        app:layout_constraintTop_toTopOf="@id/siv_more_circle" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="더보기"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/siv_more_circle"
        app:layout_constraintStart_toStartOf="@id/siv_more_circle"
        app:layout_constraintTop_toBottomOf="@id/siv_more_circle" />


</androidx.constraintlayout.widget.ConstraintLayout>