<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_home_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#212B35"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_home_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_top_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_home_top1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="무료배달 + 총 10,000원 할인"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_home_star"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_home_top2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 적용 가능"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_home_top1"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siv_home_top"
                    android:layout_width="58dp"
                    android:layout_height="26dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="15dp"
                    android:background="#02AFFE"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/corner_rd_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쿠폰 받기"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/siv_home_top"
                    app:layout_constraintEnd_toEndOf="@id/siv_home_top"
                    app:layout_constraintStart_toStartOf="@id/siv_home_top"
                    app:layout_constraintTop_toTopOf="@id/siv_home_top" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="62dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_home_marker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_marker"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_home_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3dp"
                    android:text="서울시 송파구 잠실동"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/iv_home_marker"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_home_accordion"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_home_accordion"
                    app:layout_constraintStart_toEndOf="@id/tv_home_address"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_home_bell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_home_bell"
                    app:layout_constraintStart_toEndOf="@id/iv_home_accordion"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="31dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_home_address">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_home_search"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:text="@string/suggest"
                    android:textColor="@color/suggest_color"
                    android:textSize="15sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="37dp"
                app:layoutManager="GridLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_home_find"
                app:spanCount="5" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_home_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="325dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siv_home_mid"
                    android:layout_width="306dp"
                    android:layout_height="77dp"
                    android:background="#0C2F65"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/corner_size_8" />

                <TextView
                    android:id="@+id/tv_mid_str1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="81dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/wow"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/free"
                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/tv_mid_str1"
                    app:layout_constraintTop_toBottomOf="@id/tv_mid_str1" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siv_home_mid2"
                    android:layout_width="84dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/siv_home_mid"
                    app:layout_constraintTop_toTopOf="@id/siv_home_mid"
                    app:shapeAppearanceOverlay="@style/corner_size_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/order"
                    android:textColor="#0C2F65"
                    android:textFontWeight="700"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@id/siv_home_mid2"
                    app:layout_constraintTop_toTopOf="@id/siv_home_mid2" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_recent_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="24dp"
                android:text="@string/recent"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_home_mid" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_recent" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_home_image_scroll"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_recent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>