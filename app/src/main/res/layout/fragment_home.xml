<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_home_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212B35"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_home_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_top_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/tv_home_discount"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_home_star"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_home_can"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_home_top1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_home_top"
            android:layout_width="58dp"
            android:layout_height="26dp"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="15dp"
            android:background="#02AFFE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/corner_rd_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_home_coupon"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/siv_home_top"
            app:layout_constraintEnd_toEndOf="@id/siv_home_top"
            app:layout_constraintStart_toStartOf="@id/siv_home_top"
            app:layout_constraintTop_toTopOf="@id/siv_home_top" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/cl_home_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/ll_home_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_home_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_marker" />

                <TextView
                    android:id="@+id/tv_home_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/pretendard_variable"
                    android:text="@string/tv_home_address"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_home_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:src="@drawable/ic_home_down" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_home_bell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_bell" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="31dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_home_address">

                <ImageView
                    android:id="@+id/iv_home_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_search" />

                <TextView
                    android:id="@+id/tv_home_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/pretendard_variable"
                    android:text="@string/tv_home_user"
                    android:textColor="@color/gray1" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_home_question" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home"
                android:layout_width="0dp"
                android:layout_height="77dp"
                android:layout_marginHorizontal="27dp"
                android:layout_marginTop="16dp"
                android:background="@color/blue1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_home_food"
                app:shapeAppearanceOverlay="@style/corner_size_8" />

            <TextView
                android:id="@+id/tv_home_infinite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="81dp"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/pretendard_variable"
                android:text="@string/tv_home_infinite"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@id/siv_home"
                app:layout_constraintTop_toTopOf="@id/siv_home" />

            <TextView
                android:id="@+id/tv_home_free"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="81dp"
                android:layout_marginBottom="21dp"
                android:fontFamily="@font/pretendard_variable"
                android:text="@string/tv_home_free"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/siv_home"
                app:layout_constraintTop_toBottomOf="@id/tv_home_infinite" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_home_go"
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="12dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@id/siv_home"
                app:layout_constraintTop_toTopOf="@id/siv_home"
                app:shapeAppearanceOverlay="@style/corner_size_4" />

            <TextView
                android:id="@+id/tv_home_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/pretendard_variable"
                android:text="@string/btn_home_go"
                android:textColor="@color/blue1"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/btn_home_go"
                app:layout_constraintTop_toTopOf="@id/btn_home_go" />

            <TextView
                android:id="@+id/tv_home_see"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pretendard_variable"
                android:text="@string/tv_home_see"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/siv_home" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_see"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_home_see" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@id/rv_home_see"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_home_vp"
                android:layout_width="44dp"
                android:layout_height="19dp"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="1/5"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/bg_custom_tv"
                app:layout_constraintBottom_toBottomOf="@id/vp_home"
                app:layout_constraintEnd_toEndOf="@id/vp_home"/>

            <LinearLayout
                android:id="@+id/ll_home_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/vp_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="54dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>