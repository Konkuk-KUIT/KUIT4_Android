<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_detail_eta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="29dp"
        android:text="도착까지 약 30분"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_minimum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최소주문"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/tv_detail_eta"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_eta" />

    <TextView
        android:id="@+id/tv_minimum_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14,000원"
        android:textSize="15sp"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/tv_minimum_price"
        app:layout_constraintStart_toEndOf="@id/tv_minimum_price"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tv_delivery_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달비"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/tv_detail_eta"
        app:layout_constraintTop_toBottomOf="@id/tv_minimum_price" />

    <TextView
        android:id="@+id/tv_delivery_fee_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14,000원"
        android:textSize="15sp"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/tv_delivery_fee"
        app:layout_constraintStart_toStartOf="@id/tv_minimum_price_value"
        />


    <View
        android:id="@+id/v_detail_delivery_rectangle"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="30dp"
        android:background="#F7F8F8"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_fee" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_delivery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="27dp"
        android:paddingStart="38dp"
        android:paddingEnd="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_detail_delivery_rectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>