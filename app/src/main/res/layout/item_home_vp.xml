<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_home_vp_img"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_favorite_our_snack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_home_vp_order"
        android:layout_width="44dp"
        android:layout_height="19dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/img_home_vp_rectangle"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_vp_img"
        app:layout_constraintEnd_toEndOf="@id/iv_home_vp_img"
        app:layout_constraintTop_toTopOf="@id/iv_home_vp_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/3"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_vp_order"
        app:layout_constraintEnd_toEndOf="@id/iv_home_vp_order"
        app:layout_constraintStart_toStartOf="@id/iv_home_vp_order"
        app:layout_constraintTop_toTopOf="@id/iv_home_vp_order" />


</androidx.constraintlayout.widget.ConstraintLayout>