<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".detail.DetailTogoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_detail_togo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:text="도착까지 30분"
                android:textFontWeight="600"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_detail_togo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="86dp"
                android:text="매장.원산지 정보"
                android:textFontWeight="600"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/tv_detail_togo_time"
                app:layout_constraintTop_toTopOf="@id/tv_detail_togo_time" />

            <ImageView
                android:id="@+id/iv_detail_deliver_accordion"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_accordion_right"
                app:layout_constraintBottom_toBottomOf="@id/tv_detail_togo_info"
                app:layout_constraintStart_toEndOf="@id/tv_detail_togo_info"
                app:layout_constraintTop_toTopOf="@id/tv_detail_togo_info" />

            <TextView
                android:id="@+id/tv_detail_togo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:text="매장주소"
                android:textFontWeight="600"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_togo_time" />

            <TextView
                android:id="@+id/tv_detail_togo_address_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="서울특별시 광진구 능동로 19길"
                android:textFontWeight="400"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_detail_togo_address"
                app:layout_constraintStart_toEndOf="@id/tv_detail_togo_address" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_detail_rectangle"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="30dp"
                android:background="#F7F8F8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_togo_address"
                app:shapeAppearanceOverlay="@style/rectangle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_togo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siv_detail_rectangle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>