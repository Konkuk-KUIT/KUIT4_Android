<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="183dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_review_item_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_variable"
            android:text="아워떡볶이"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_review_star_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_review_item_store_name">

            <ImageView
                android:id="@+id/iv_review_star_1"
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/img_review_star"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_review_star_2"
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/img_review_star"
                app:layout_constraintStart_toEndOf="@id/iv_review_star_1"

                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_review_star_3"
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/img_review_star"
                app:layout_constraintStart_toEndOf="@id/iv_review_star_2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_review_star_4"
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/img_review_star"
                app:layout_constraintStart_toEndOf="@id/iv_review_star_3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_review_star_5"
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/img_review_star"
                app:layout_constraintStart_toEndOf="@id/iv_review_star_4"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendard_variable"
            android:text="2024-04-11"
            android:textColor="#575252"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/cl_review_star_group"
            app:layout_constraintTop_toTopOf="@id/cl_review_star_group" />

        <TextView
            android:id="@+id/tv_review_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/pretendard_variable"
            android:text="yummy~~~~"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_review_star_group" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>