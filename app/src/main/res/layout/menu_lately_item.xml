<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="50dp">

    <ImageView
        android:id="@+id/iv_lately_item_img"
        android:layout_width="230dp"
        android:layout_height="129dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lately_item_title"
        style="@style/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="떡볶이"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/iv_lately_item_img"
        app:layout_constraintTop_toBottomOf="@id/iv_lately_item_img" />

    <TextView
        android:id="@+id/tv_lately_item_time"
        style="@style/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="30분"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_lately_item_img"
        app:layout_constraintTop_toBottomOf="@id/iv_lately_item_img" />

    <ImageView
        android:id="@+id/iv_lately_item_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lately_item_title" />

    <TextView
        android:id="@+id/tv_lately_item_score"
        style="@style/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="4.9"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_lately_item_star"
        app:layout_constraintTop_toTopOf="@id/iv_lately_item_star" />

    <TextView
        android:id="@+id/tv_lately_item_num"
        style="@style/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/pretendard_variable"
        android:text="(3,849)"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_lately_item_score"
        app:layout_constraintTop_toTopOf="@id/tv_lately_item_score" />


</androidx.constraintlayout.widget.ConstraintLayout>