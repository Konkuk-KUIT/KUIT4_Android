<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_category_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="@+id/siv_main_sample">

    <ImageView
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:id="@+id/iv_category_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:textSize="11sp"
        android:text="카테고리메뉴"
        android:id="@+id/tv_category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_item"
        app:layout_constraintStart_toStartOf="@+id/iv_category_item"
        app:layout_constraintEnd_toEndOf="@+id/iv_category_item"
        />


</androidx.constraintlayout.widget.ConstraintLayout>