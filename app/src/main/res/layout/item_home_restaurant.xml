<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_restaurant"
        style="@style/corner_size_8"
        android:layout_width="230dp"
        android:layout_height="129dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font"
        android:text="아워떡볶이"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_item_restaurant"
        app:layout_constraintTop_toBottomOf="@id/iv_item_restaurant" />

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="206dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font"
        android:text="30분"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/iv_item_restaurant"
        app:layout_constraintTop_toBottomOf="@id/iv_item_restaurant" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_home_star"
        app:layout_constraintStart_toStartOf="@id/iv_item_restaurant"
        app:layout_constraintTop_toBottomOf="@id/tv_item_restaurant" />

    <TextView
        android:id="@+id/tv_item_reviewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font"
        android:text="4.9"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_item_restaurant"
        app:layout_constraintTop_toBottomOf="@id/tv_item_restaurant" />

    <TextView
        android:id="@+id/tv_item_reviewcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font"
        android:text="(3,849)"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_item_reviewScore"
        app:layout_constraintTop_toBottomOf="@id/tv_item_restaurant" />


</androidx.constraintlayout.widget.ConstraintLayout>