<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keep.KeepActivity">

    <ImageView
        android:id="@+id/iv_keep_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_24_back_grey"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="27dp"/>
    <TextView
        android:id="@+id/tv_keep_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="즐겨찾기"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/iv_keep_back"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toTopOf="@id/iv_keep_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_keep_back"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:textColor="#02AFEE"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/iv_keep_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_keep_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="27dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 1개"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="127dp"
        android:layout_marginStart="27dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fcv_keep_rectangle"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp"
        android:background="#F7F8F8"
        android:layout_marginTop="175dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_keep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fcv_keep_rectangle"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/iv_keep_image1"
            android:layout_width="306dp"
            android:layout_height="129dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/image1"/>

        <TextView
            android:id="@+id/tv_keep_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아워 떡볶이"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/iv_keep_image1"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/iv_keep_image1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30분"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/iv_keep_image1"
            app:layout_constraintTop_toBottomOf="@id/iv_keep_image1"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/iv_keep_star"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_home_star"
            app:layout_constraintTop_toBottomOf="@id/tv_keep_name"
            app:layout_constraintStart_toStartOf="@id/tv_keep_name"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9 (3,849)"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_keep_star"
            app:layout_constraintTop_toBottomOf="@id/tv_keep_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>








        





</androidx.constraintlayout.widget.ConstraintLayout>