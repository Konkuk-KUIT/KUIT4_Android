<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="800dp"
    tools:context=".myeats.MyEatsFragment">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="@string/user"
        android:textSize="28sp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@id/icon_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phonenumber_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="12dp"
        android:text="@string/user_phonenumber"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="77dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/icon_back"
        app:layout_constraintTop_toTopOf="@id/icon_back">

        <TextView
            android:id="@+id/zero_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:text="0"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/zero_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp"
            android:text="0"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/zero_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp"
            android:text="0"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/icon_back"
        app:layout_constraintTop_toBottomOf="@id/icon_back" >

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 남긴 리뷰"
            android:textColor="#444D53"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="도움이 됐어요"
            android:textColor="#444D53"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/liking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="즐겨찾기"
            android:textColor="#444D53"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bule_rec"
        android:layout_width="306dp"
        android:layout_height="42dp"
        android:layout_marginTop="134dp"
        android:src="@drawable/bule_rectangle"
        app:layout_constraintStart_toStartOf="@id/icon_back"
        app:layout_constraintTop_toBottomOf="@id/icon_back" />

    <TextView
        android:id="@+id/close_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#02AFFE"
        app:layout_constraintStart_toStartOf="@id/bule_rec"
        app:layout_constraintTop_toTopOf="@id/bule_rec"
        android:text="자세히 보기"
        android:layout_marginTop="13dp"
        android:layout_marginStart="121dp"/>

    <LinearLayout
        android:id="@+id/like_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/icon_back"
        android:layout_marginTop="204dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/icon_back">
        
        <ImageView
            android:id="@+id/img_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_black_like"
            />
        <TextView
            android:id="@+id/text_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="즐겨찾기"
            android:textSize="21sp"
            android:textColor="@color/black"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>